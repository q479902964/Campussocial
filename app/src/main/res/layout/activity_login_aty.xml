<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_aty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.huwei.campussocial.view.LoginAty"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/title"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="学号/个人邮箱/手机号码"
            android:id="@+id/Et1"
            android:layout_above="@+id/Et2">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAEAEA"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:password="true"
            android:id="@+id/Et2"
            android:layout_above="@+id/bt_reset" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:paddingLeft="5dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="快速注册"
                android:gravity="start"
                android:textColor="#FF0000"
                android:id="@+id/bt2"
                android:layout_gravity="center"
                android:background="#00000000"
                android:textStyle="bold"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_reset"
                android:text="修改密码"
                android:gravity="start"
                android:background="#00000000"
                android:textColor="#FF0000"
                android:layout_above="@+id/bt1"
                android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登        录"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/bt1"
            android:background="@drawable/shape_1" />
        <Button
            android:paddingTop="20dp"
            android:id="@+id/bt_vistor"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:background="#00000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客身份访问 >>"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
